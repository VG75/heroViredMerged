# Database Configuration (Local Development with Docker)
DATABASE_URL=postgres://postgres:your_password@localhost:5433/uniapply

# Security
JWT_SECRET=your_secure_jwt_secret_key_here_generate_with_crypto

# Server Configuration
PORT=5000

# Redis Cache
REDIS_URL=redis://localhost:6379

# Database Credentials (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password
POSTGRES_DB=uniapply

# Frontend URL for CORS (comma-separated for multiple origins)
# Local: http://localhost:3000
# Production: https://your-app.vercel.app,https://your-app-preview.vercel.app
CLIENT_URL=http://localhost:3000

# Production Note:
# For Render deployment, use the DATABASE_URL provided by Render
# (it will be postgres://user:pass@dpg-xxxxx.render.com:5432/database_name)
